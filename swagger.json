  "components": {
    "schemas": {
      "Login": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "Users": {
        "type": "object",
        "required": ["firstName", "lastName", "email", "password"],
        "properties": {
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string",
            "minLength": 8
          }
        }
      },
      "Actors": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string"
          }
        }
      },
      "GetActor": {
        "type": "object",
        "required": ["id"],
        "properties": {
          "id": {
            "type": "integer"
          }
        }
      },
      "UpdateActor": {
        "type": "object",
        "required": ["id"],
        "properties": {
          "id": {
            "type": "integer"
          }
        }
      },
      "DeleteActor": {
        "type": "object",
        "required": ["id"],
        "properties": {
          "id": {
            "type": "integer"
          }
        }
      },
      "Directors": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string"
          }
        }
      },
      "Contents": {
        "type": "object",
        "required": [
          "id",
          "title",
          "total_seasons",
          "imdb_score",
          "release_date",
          "play_time",
          "total_episodes",
          "content_type",
          "imdb_link",
          "last_updated",
          "imdb_score_votes",
          "rating_details",
          "languages"
        ],
        "properties": {
          "id": {
            "type": "integer"
          },
          "title": {
            "type": "string"
          },
          "total_seasons": {
            "type": "integer"
          },
          "imdb_score": {
            "type": "numeric"
          },
          "release_date": {
            "type": "string"
          },
          "play_time": {
            "type": "string"
          },
          "total_episodes": {
            "type": "string"
          },
          "content_type": {
            "type": "string"
          },
          "imdb_link": {
            "type": "string"
          },
          "last_updated": {
            "type": "timestamp"
          },
          "imdb_score_votes": {
            "type": "string"
          },
          "rating_details": {
            "type": "json"
          },
          "languages": {
            "type": "string"
          }
        }
      },
      "GetContents": {
        "type": "object",
        "required": ["id"],
        "properties": {
          "id": {
            "type": "integer"
          }
        }
      },
      "UpdateContent": {
        "type": "object",
        "required": ["id"],
        "properties": {
          "id": {
            "type": "integer"
          }
        }
      },
      "DeleteContent": {
        "type": "object",
        "required": ["id"],
        "properties": {
          "id": {
            "type": "integer"
          }
        }
      },
      "ResetPassword": {
        "type": "object",
        "required": ["email"],
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "UpdatePassword": {
        "type": "object",
        "required": ["token"],
        "properties": {
          "token": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "UserRoles": {
        "type": "object",
        "required": ["userId"],
        "properties": {
          "userId": {
            "type": "integer"
          },
          "roleId": {
            "type": "integer"
          }
        }
      },
      "Roles": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "jwt": {
        "type": "http",
        "scheme": "bearer",
        "description": "JSON WEB TOKEN"
      }
    }
  }
}
